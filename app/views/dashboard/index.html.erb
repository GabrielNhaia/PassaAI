<div class="container-fluid">
  <div class="row">
    <%= render 'shared/sidebar' %>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Dashboard</h1>
        <div class="dropdown">
          <button class="btn btn-link text-dark dropdown-toggle d-flex align-items-center text-decoration-none" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle fs-4 me-2"></i>
            <span><%= current_user.email %></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
            <li>
              <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                <i class="bi bi-gear me-2"></i>Editar Conta
              <% end %>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <%= button_to destroy_user_session_path, method: :delete, class: "dropdown-item text-danger" do %>
                <i class="bi bi-box-arrow-right me-2"></i>Sair
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <h2>Média de Notas</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Matemática</h5>
              <p class="card-text">Média: 85</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Linguagens</h5>
              <p class="card-text">Média: 90</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Ciências Humanas</h5>
              <p class="card-text">Média: 88</p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>