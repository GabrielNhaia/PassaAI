<div class="container-fluid">
  <div class="row">
    <%# Sidebar do dashboard existente %>
    <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item">
            <%= link_to profile_path, class: "nav-link #{current_page?(profile_path) ? 'active' : ''}" do %>
              <i class="bi bi-person me-2"></i>Perfil
            <% end %>
          </li>
          <%# ...rest of navigation items... %>
        </ul>
      </div>
    </nav>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <!-- Cabeçalho com dropdown de perfil -->
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Meu Perfil</h1>
        <%# ...existing dropdown profile code... %>
      </div>
      <!-- Card de informações do usuário -->
      <div class="row mb-4">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-md-3 text-center">
                  <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                </div>
                <div class="col-md-9">
                  <h4><%= current_user.email %></h4>
                  <p class="text-muted mb-2">Membro desde: <%= current_user.created_at.strftime("%d/%m/%Y") %></p>
                  <p class="text-muted">Total de simulados realizados: 15</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Gráfico de médias por matéria -->
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Médias por Matéria</h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Matéria</th>
                      <th>Média</th>
                      <th>Progresso</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Matemática</td>
                      <td>85</td>
                      <td>
                        <div class="progress">
                          <div class="progress-bar bg-success" role="progressbar" style="width: 85%"></div>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td>Linguagens</td>
                      <td>90</td>
                      <td>
                        <div class="progress">
                          <div class="progress-bar bg-success" role="progressbar" style="width: 90%"></div>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td>Ciências Humanas</td>
                      <td>88</td>
                      <td>
                        <div class="progress">
                          <div class="progress-bar bg-success" role="progressbar" style="width: 88%"></div>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title mb-0">Evolução das Notas</h5>
            </div>
            <div class="card-body">
              <!-- Aqui você pode adicionar um gráfico de linha mostrando a evolução -->
              <canvas id="evolutionChart" width="400" height="250"></canvas>
            </div>
          </div>
        </div>
      </div>
      <!-- Tabela de Simulados Realizados -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Histórico de Simulados</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Data</th>
                  <th>Simulado</th>
                  <th>Matéria</th>
                  <th>Nota</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>10/11/2023</td>
                  <td>Simulado ENEM 1</td>
                  <td>Matemática</td>
                  <td>85</td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary">Ver Detalhes</button>
                  </td>
                </tr>
                <tr>
                  <td>09/11/2023</td>
                  <td>Simulado ENEM 2</td>
                  <td>Linguagens</td>
                  <td>90</td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary">Ver Detalhes</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
<!-- Script para o gráfico de evolução -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener('turbo:load', function() {
    const ctx = document.getElementById('evolutionChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun'],
        datasets: [{
          label: 'Média Geral',
          data: [65, 70, 75, 80, 85, 88],
          borderColor: '#4A90E2',
          tension: 0.1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false
      }
    });
  });
</script>
